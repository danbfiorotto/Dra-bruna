# Sistema Dra. Bruna - Variáveis de Ambiente
# Copie este arquivo para .env e configure as variáveis

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# URL do projeto Supabase
SUPABASE_URL=https://your-project.supabase.co

# Chave anônima do Supabase (pública)
SUPABASE_ANON_KEY=your_supabase_anon_key

# Chave de serviço do Supabase (privada - apenas para backend)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# SITE CONFIGURATION (Next.js)
# =============================================================================
# Variáveis públicas (acessíveis no browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SITE_URL=https://drabruna.com.br

# =============================================================================
# APP CONFIGURATION (Tauri)
# =============================================================================
# Variáveis do Vite (acessíveis no frontend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
VITE_APP_VERSION=1.0.0
VITE_APP_NAME="Dra. Bruna - Gestão Clínica"

# =============================================================================
# TAURI CONFIGURATION
# =============================================================================
# Chave privada para assinatura do aplicativo (base64)
TAURI_PRIVATE_KEY=your_tauri_private_key

# Senha da chave privada
TAURI_KEY_PASSWORD=your_tauri_key_password

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Ambiente de desenvolvimento
NODE_ENV=development

# Debug mode
DEBUG=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Chave secreta para JWT (gerar com: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key

# Chave para criptografia de dados sensíveis
ENCRYPTION_KEY=your_encryption_key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Configurações de backup
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Diário às 02:00

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Nível de log (error, warn, info, debug)
LOG_LEVEL=info

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Flags de funcionalidades
FEATURE_ANALYTICS=false
FEATURE_CRASH_REPORTING=true
FEATURE_AUTO_UPDATE=true
